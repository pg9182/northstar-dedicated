# Maintainer: pg9182 <96569817+pg9182@users.noreply.github.com>
pkgname=northstar
pkgver=1.6.0
pkgver_tf=2.0.11.0
pkgrel=0
pkgdesc="Northstar binaries and mods"

url="https://northstar.tf"
license="MIT"

arch="x86_64"
source="https://cpdt.dev/files/Northstar.release.v1.6.0-rc5-official.zip"

check() {
	ls "$srcdir"
	test -f "$srcdir/NorthstarLauncher.exe"
	test -f "$srcdir/R2Northstar/mods/Northstar.CustomServers/mod/cfg/autoexec_ns_server.cfg"
}

package() {
	rm "$srcdir"/*.zip
	rm -rf "$srcdir/bin"
	mkdir -p "$pkgdir/usr/lib/northstar"
	cp -r "$srcdir/." "$pkgdir/usr/lib/northstar/"
}
sha512sums="
1d4bbfb62ece7ad07dbedcca32cb53b224b6c9b830e29611967a9bd3fd27e098efbe643ba33655c7db5cfbf12fb07f0542dd0ee4b029a42ed958f6ddebf4b89a  Northstar.release.v1.6.0-rc5-official.zip
"
